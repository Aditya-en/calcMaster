<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calc" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="buttons" parent="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="android:layout_margin">10dp</item>
<!--        <item name="backgroundTint">@color/white</item>-->
        <item name="backgroundTint">@color/buttonBackground</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="operators" parent="buttons">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btn" parent="buttons">
        <item name="backgroundTint">@color/lightOrange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Calc" parent="Base.Theme.Calc" />
</resources>