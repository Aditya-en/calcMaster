<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    tools:context="MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="356dp"
        android:layout_height="64dp"
        android:fontFamily="sans-serif-black"
        android:text="Unit Convertor"
        android:textAlignment="center"
        android:textColor="#F8F4F4"
        android:textColorHighlight="#F8F5F5"
        android:textSize="38sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />


    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="317dp"
        android:layout_height="79dp"
        android:backgroundTint="#ffffff"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="Enter the value"
        android:inputType="numberDecimal"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#ffffff"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />


    <Button
        android:id="@+id/convertButton"
        style="@style/btn"
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Convert"
        android:fontFamily="sans-serif-black"
        android:textSize="26dp"
        android:textColorHighlight="#545355"
        android:textColorLink="#8E8686"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal"
        app:layout_constraintVertical_bias="0.134" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="151dp"
        android:layout_height="74dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="multiply"
        android:dropDownSelector="@color/black"
        android:textAlignment="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.567" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="147dp"
        android:layout_height="71dp"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.696" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="99dp"
        android:layout_height="58dp"
        android:background="@drawable/rounder_corner"
        android:fadingEdge="horizontal"
        android:fontFamily="sans-serif-black"
        android:text="From"
        android:textAlignment="center"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.552"
        app:layout_constraintCircleRadius="20dp"
        style="@style/operators"/>

    <TextView
        android:id="@+id/textView5"
        style="@style/operators"
        android:layout_width="96dp"

        android:layout_height="61dp"
        android:background="@drawable/rounder_corner"
        android:fadingEdge="horizontal"
        android:fontFamily="sans-serif-black"
        android:text="To"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.708" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="193dp"
        android:editable="false"
        android:layout_height="66dp"
        android:backgroundTint="#F6F3F3"
        android:ems="10"

        android:hint="Output"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="#FAF6F6"
        android:textColorHighlight="#F3EFEF"
        android:textColorHint="#EDE9E9"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="272dp"
        android:layout_height="28dp"
        android:text="BUILD BY TEAM AUXIN"
        android:textAlignment="center"
        android:textColor="#F8F0F0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="378dp"
        android:layout_height="526dp"
        android:layout_marginTop="320dp"
        android:src="@drawable/meter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="407dp"
        android:layout_height="279dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="112dp"
        android:src="@drawable/meter"
        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>